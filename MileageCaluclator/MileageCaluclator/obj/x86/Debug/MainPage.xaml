<Page
    x:Class="MileageCaluclator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MileageCaluclator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel x:ConnectionId='1' Name="Main" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Starting Mileage" Margin="10, 0, 10, 0"/>
            <TextBox x:ConnectionId='5' Name="startMileage" PlaceholderText="Enter numbers only please"                               />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Stopping Mileage" Margin="10, 0, 10, 0"/>
            <TextBox x:ConnectionId='4' Name="stopMileage" PlaceholderText="Enter numbers only please"                              />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Amount Owed" Margin="10, 0, 10, 0"/>
            <TextBlock x:ConnectionId='3' Name="amount"/>
        </StackPanel>
        <Button x:ConnectionId='2' Name="Calculate" Content="Calculate" HorizontalAlignment="Center"                        />
    </StackPanel>
</Page>

